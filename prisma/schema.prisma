model ActivityLogs {
  id         String   @id @default(cuid())
  date       DateTime
  fileName   String
  fileNumber String
  action     String
}

model DailySummary {
  id            String   @id @default(cuid())
  date          DateTime
  numberOfFiles Int
  completed     Int
  pending       Int
  returned      Int
}

model MonthlySummary {
  id            String @id @default(cuid())
  date          String
  numberOfFiles Int
  completed     Int
  pending       Int
  returned      Int
}
